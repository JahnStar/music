@import url(https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.6.3/css/font-awesome.css);
@import url('https://fonts.googleapis.com/css?family=Rubik:400');
#name{
	display: block;
	text-align: center;
	margin: 10px;
}
#avatar{
	display: block;
	margin-left: auto;
	margin-right: auto;
	width: 75px;
	height: 75px;
	border: 2px solid  #fff;
	border-radius: 50%;
}
h1 {
	color: #1fd660;
	text-align: center;
	margin-top: 15px;
	margin-bottom: 17px;
}
h2{
	color: #222222;
	font-size: 1.7em;
	margin-top: 15px;
	margin-bottom: 18px;
}
p {
	color:white;
    line-height: 17px;
}
a{
	text-decoration:none;
}
i{
	color: #fff;
	display: block;
	text-align: center;
	width: 12%;
}
body {
	align-items: center;
	background-color: #eef0f6;
	display: flex;
	height: 100vh;
	background: url(page-bg.jpg) repeat;
	background-size: cover;
	justify-content: center;
	font-family: Montserrat,Lato,LatoExtended,sans-serif;
}
.card {
	align-items: center;
	background: #35394a;
	border-radius: 25px;
	box-shadow: 0px 0px 15px #000;
	display: flex;
	flex-direction: column;
	position: relative;
	width: 27em;
	border-top: 5px solid #1fd660;
	border-bottom: 5px solid #1fd660;
	padding: 40px;
}
.button {
	width: 50%;
	height: 25px;
	background: #1fd660;
	border-radius: 5px;
	color: white;
	font-weight: bold;
	padding: 10px;
	transition-duration: 0.25s;
	border: 2px solid #1fd660;
	margin: auto;
	bottom: 15px;
	align-items: center;
	cursor: pointer;
	display: flex;
	justify-content: center;

}
.button:hover {
	transition-duration: 0.25s;
	background-color: #fff;
	color: BLACK;
}
.itch_widget {
    position: relative; 
	bottom: 14%;
    background: #ffffff;
    text-align: center;
    border-radius: 10px;
    color: white;
    line-height: 25px;
    left: 0;
    right: 0;
	padding: 10px;
	width: 90%;
}
.itchio_mini_logo{
	position: absolute;
    right: 15px;
    margin: auto;
    bottom: 15px;
	text-align: center;

}
.social{
	position: relative;
	text-align: center;
	display: block;
    left: 0;
    right: 0;
    margin: auto;
    bottom: 9.6%;
	height: 5px;
	padding-top: 20px;
	padding-bottom: 20px;
}
.social a {
	padding: 10px;
}
#developer{
	position: absolute;
    top: 0;
    left: 0;
    right: 0;
	width: 135px;
    height: 15px;
    background-color: #35394a8c;
	border-bottom-right-radius: 8px;
	border-top-right-radius: 8px;
	padding:5px;
	font-family: Montserrat,Lato,LatoExtended,sans-serif;
	font-size: 12px;
	box-shadow: 0px 0px 5px #bbb;
}